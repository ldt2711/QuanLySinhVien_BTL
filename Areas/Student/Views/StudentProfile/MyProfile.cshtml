@model QuanLySinhVien_BTL.Models.Student

@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Thông tin cá nhân</h2>

@if(Model != null)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>MSSV</th>
                <th>Họ tên</th>
                <th>Giới tính</th>
                <th>Ngày sinh</th>
                <th>Email</th>
                <th>SĐT</th>
                <th>Địa chỉ</th>
                <th>Ngành học</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Gender</td>
                <td>@Model.DateOfBirth.ToShortDateString()</td>
                <td>@Model.Email</td>
                <td>@Model.Phone</td>
                <td>@Model.Address</td>
                <td>@Model.Major?.Name</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Edit" class="btn btn-primary">Chỉnh sửa thông tin</a>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        Không tìm thấy thông tin sinh viên của bạn.
    </div>
}
@await Html.PartialAsync("~/Views/Shared/_DeleteConfirmationModal.cshtml")

@section Scripts {
    <script src="~/js/delete-confirm.js"></script>
}
