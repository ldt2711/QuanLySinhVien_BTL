@model QuanLySinhVien_BTL.Models.UserViewModel

@{
    ViewData["Title"] = "Thêm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div asp-validation-summary="None" class="text-danger"></div>

<div class="container mt-4">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h3 class="mb-0">Thêm người dùng mới</h3>
        </div>
        <div class="card-body p-4">
            <form asp-area="Admin" asp-controller="Users" asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="example@domain.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Mật khẩu</label>
                    <!-- show password as plain text -->
                    <input asp-for="Password" type="text" class="form-control" placeholder="Nhập mật khẩu" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold">Vai trò</label>
                    <select asp-for="Role" class="form-select" asp-items="new Microsoft.AspNetCore.Mvc.Rendering.SelectList(ViewBag.Roles)">
                        <option value="">-- Chọn vai trò --</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-save"></i> Lưu người dùng
                    </button>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
