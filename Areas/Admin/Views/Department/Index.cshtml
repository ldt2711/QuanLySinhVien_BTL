@model IEnumerable<QuanLySinhVien_BTL.Models.Department>;

@{
    ViewData["Title"] = "Danh sách khoa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Danh sách khoa</h2>

<p>
    <a href="@Url.Action("Create", "Department", new { area = "Admin" })" class="btn btn-primary">Thêm khoa mới</a>
</p>

<div>
    <form asp-action="Index" asp-controller="Department" asp-area="Admin" method="get" class="d-flex align-items-center mb-3">
        <input type="text" name="searchString" class="form-control me-2" placeholder="Tìm kiếm theo tên khoa..." value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-info">Tìm kiếm</button>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã khoa</th>
            <th>Tên khoa</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentId</td>
                <td>@department.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Department", new { area = "Admin", id = department.DepartmentId })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", "Department", new { area = "Admin", id = department.DepartmentId })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa khoa này?')">Xóa</a>
                </td>
            </tr>
          }
    </tbody>
</table>    
