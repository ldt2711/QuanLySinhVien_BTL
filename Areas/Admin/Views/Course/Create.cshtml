@model QuanLySinhVien_BTL.Models.Course

@{
    ViewData["Title"] = "Thêm lớp học phần";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div asp-validation-summary="None" class="text-danger"></div>

<div class="container mt-4">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h3 class="mb-0">Thêm lớp học phần mới</h3>
        </div>
        <div class="card-body p-4">
            <form asp-area="Admin" asp-controller="Course" asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="CourseName" class="form-label fw-bold">Tên lớp học phần</label>
                <input asp-for="CourseName" class="form-control" placeholder="Nhập tên lớp học phần" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Semester" class="form-label fw-bold">Kỳ học</label>
                <input asp-for="Semester" class="form-control" placeholder="Nhập kì học" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Year" class="form-label fw-bold">Năm học</label>
                <input asp-for="Year" class="form-control" placeholder="Nhập năm học" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LecturerId" class="form-label fw-bold">Giảng viên</label>
                <select asp-for="LecturerId" asp-items="ViewBag.Lecturers" class="form-select">
                    <option value="0">-- Chọn giảng viên --</option>
                </select>
                <span asp-validation-for="LecturerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MajorId" class="form-label fw-bold">Ngành</label>
                <select asp-for="MajorId" asp-items="ViewBag.Majors" class="form-select">
                    <option value="">-- Chọn ngành --</option>
                </select>
                <span asp-validation-for="MajorId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Coefficient" class="form-label fw-bold">Hệ số</label>
                <input asp-for="Coefficient" class="form-control" placeholder="Nhập hệ số" />
                <span asp-validation-for="Coefficient" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4 me-2">
                    <i class="bi bi-save"></i> Lưu lớp học phần
                </button>
                <a asp-area="Admin" asp-controller="Course" asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}