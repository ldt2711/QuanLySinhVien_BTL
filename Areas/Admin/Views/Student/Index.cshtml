@model IEnumerable<QuanLySinhVien_BTL.Models.Student>

@{
    ViewData["Title"] = "Danh sách sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Danh sách sinh viên</h2>

<p>
    <a asp-area="Admin" asp-controller="Student" asp-action="Create" class="btn btn-primary">Thêm sinh viên</a>
</p>

<div class="mb-3">
    <form asp-action="Index" asp-controller="Student" asp-area="Admin" method="get" class="d-flex align-items-center">
        <input type="text" name="searchString" class="form-control me-2" placeholder="Tìm theo tên hoặc MSSV..."
               value="@ViewData["CurrentFilter"]" />

        <select name="MajorId" class="form-select me-2">
            <option value="">-- Lọc theo Ngành --</option>
            @foreach (var majorItem in ViewBag.Majors as SelectList)
            {
                <option value="@majorItem.Value" selected="@(majorItem.Value == ViewData["CurrentMajorId"]?.ToString())">
                    @majorItem.Text
                </option>
            }
        </select>
        <button type="submit" class="btn btn-info">Tìm kiếm & Lọc</button>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>MSSV</th>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Địa chỉ</th>
            <th>Ngành học</th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Gender</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.Address</td>
                <td>@student.Major?.Name</td>
                <td>
                    <a asp-area="Admin" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-area="Admin" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Bạn có chắc chắn muốn xóa sinh viên này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
