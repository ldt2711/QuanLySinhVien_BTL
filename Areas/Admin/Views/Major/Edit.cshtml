@model QuanLySinhVien_BTL.Models.Major

@{
    ViewData["Title"] = "Chỉnh sửa ngành";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Chỉnh sửa thông tin ngành</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Major" asp-area="Admin" method="post">
            <div asp-validation-summary="None" class="text-danger"></div>

            <input type="hidden" asp-for="MajorId" />

            <div class="mb-3">
                <label asp-for="MajorId" class="form-label">Mã ngành</label>
                <input asp-for="MajorId" class="form-control" />
                <span asp-validation-for="MajorId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Tên ngành</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DepartmentId" class="form-label">Khoa</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="@(ViewBag.Departments as SelectList)">
                    <option value="">-- Chọn Khoa --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}