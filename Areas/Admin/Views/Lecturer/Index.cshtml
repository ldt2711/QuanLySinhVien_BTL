@model IEnumerable<QuanLySinhVien_BTL.Models.Lecturer>

@{
    ViewData["Title"] = "Danh sách giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Danh sách giảng viên</h2>

<p>
    <a href="@Url.Action("Create", "Lecturer", new { area = "Admin" })" class="btn btn-primary">Thêm giảng viên</a>
</p>

<div class="mb-3">
    <form asp-action="Index" asp-controller="Lecturer" asp-area="Admin" method="get" class="d-flex align-items-center">
        <input type="text" name="searchString" class="form-control me-2" placeholder="Tìm kiếm theo tên hoặc mã giảng viên..." value="@ViewData["CurrentFilter"]" />

        <select name="DepartmentId" class="form-select me-2">
            <option value="">-- Lọc theo Khoa --</option>
            @foreach (var departmentItem in ViewBag.Departments as SelectList)
            {
                <option value="@departmentItem.Value" selected="@(departmentItem.Value == ViewData["CurrentDepartmentId"]?.ToString())">@departmentItem.Text</option>
            }
        </select>
        <button type="submit" class="btn btn-info">Tìm kiếm & Lọc</button>
    </form>
</div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã giảng viên</th>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Khoa</th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.Id</td>
                <td>@lecturer.Name</td>
                <td>@lecturer.Gender</td>
                <td>@lecturer.Email</td>
                <td>@lecturer.PhoneNumber</td>
                <td>@(lecturer.Department?.Name)</td>
                <td>
                    <a href="@Url.Action("Edit", "Lecturer", new { area = "Admin", id = lecturer.Id })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", "Lecturer", new { area = "Admin", id = lecturer.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa giảng viên này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
