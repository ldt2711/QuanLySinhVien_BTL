@model IEnumerable<QuanLySinhVien_BTL.Models.Lecturer>

@{
    ViewData["Title"] = "Danh sách giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Danh sách giảng viên</h2>

<p>
    <a href="@Url.Action("Create", "Lecturer", new { area = "Admin" })" class="btn btn-primary">Thêm giảng viên</a>
</p>

<div class="mb-3">
    <form asp-action="Index" asp-controller="Lecturer" asp-area="Admin" method="get" class="d-flex align-items-center">
        <input type="text" name="searchString" class="form-control me-2" placeholder="Tìm kiếm theo tên hoặc mã giảng viên..." value="@ViewData["CurrentFilter"]" />

        <select name="DepartmentId" class="form-select me-2">
            <option value="">-- Lọc theo Khoa --</option>
            @if (ViewBag.Departments != null)
            {
                foreach (var deptItem in ViewBag.Departments as SelectList)
                {
                    <option value="@deptItem.Value" selected="@(deptItem.Value == ViewData["CurrentDepartmentId"]?.ToString())">@deptItem.Text</option>
                }
            }
        </select>
        <button type="submit" class="btn btn-info">Tìm kiếm</button>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã giảng viên</th>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Khoa</th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.Id</td>
                <td>@lecturer.Name</td>
                <td>@lecturer.Gender</td>
                <td>@lecturer.Email</td>
                <td>@lecturer.Phone</td>
                <td>@(lecturer.Department?.Name)</td>
                <td>
                    <a asp-area="Admin" asp-controller="Lecturer" asp-action="Edit" asp-route-id="@lecturer.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <button type="button"
                            class="btn btn-sm btn-danger btn-delete"
                            data-id="@lecturer.Id"
                            data-name="@lecturer.Name"
                            data-delete-url="@Url.Action("Delete", "Lecturer", new { area = "Admin" })">
                        Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("~/Views/Shared/_DeleteConfirmationModal.cshtml")

@section Scripts {
    <script src="~/js/delete-confirm.js"></script>
}
