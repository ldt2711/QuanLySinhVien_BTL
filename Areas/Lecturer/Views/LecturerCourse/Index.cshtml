@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Lớp học phần giảng dạy";
    Layout = "~/Areas/Lecturer/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary"><i class="fas fa-book-open me-2"></i>Lớp học phần của tôi</h2>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="alert alert-info">Hiện tại bạn chưa được phân công lớp học phần nào.</div>
        }
        else
        {
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@course.CourseName</h5>
                            <p class="card-text">
                                <strong>Mã học phần:</strong> @course.CourseId <br />
                                <strong>Ngành:</strong> @course.MajorName <br />
                                <strong>Sĩ số:</strong> @course.StudentCount
                            </p>
                            <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-outline-primary w-100">
                                <i class="fas fa-info-circle me-1"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
