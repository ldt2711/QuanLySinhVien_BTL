@using Microsoft.AspNetCore.Identity
@inject SignInManager<QuanLySinhVien_BTL.Models.ApplicationUser> SignInManager
@inject UserManager<QuanLySinhVien_BTL.Models.ApplicationUser> UserManager
@inject QuanLySinhVien_BTL.Data.ApplicationDbContext _context

@{
    string displayName = "";
    string userEmail = "";

    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        userEmail = currentUser?.Email ?? "";

        if (currentUser != null)
        {
            // Kiểm tra role
            var roles = await UserManager.GetRolesAsync(currentUser);

            if (roles.Contains("Sinh Viên"))
            {
                var student = _context.Students.FirstOrDefault(s => s.UserId == currentUser.Id);
                displayName = student?.Name ?? "Sinh viên";
            }
            else if (roles.Contains("Giảng Viên"))
            {
                var lecturer = _context.Lecturers.FirstOrDefault(l => l.UserId == currentUser.Id);
                displayName = lecturer?.Name ?? "Giảng viên";
            }
            else
            {
                // Nếu là admin hoặc không xác định
                displayName = currentUser.UserName;
            }
        }
    }
}

<ul class="navbar-nav ms-auto mt-2 mt-lg-0">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarUserDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle me-2" aria-hidden="true"></i>
                <span class="d-none d-md-inline">@displayName</span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarUserDropdown">
                <li><span class="dropdown-item-text text-truncate px-3">@userEmail</span></li>
                <li><span class="dropdown-item-text px-3 fw-semibold">@displayName</span></li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item">Đăng xuất</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
    }
</ul>