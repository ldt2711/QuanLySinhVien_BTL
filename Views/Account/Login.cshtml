@model QuanLySinhVien_BTL.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-page">
    <div class="card login-card shadow-sm w-100" style="max-width:420px;">
        <div class="card-body p-4">
            <h4 class="card-title text-center mb-3">ĐĂNG NHẬP</h4>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

            <form asp-action="Login" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="example@domain.com" aria-describedby="emailHelp" />
                    <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>

                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" id="Password" />
                        <span class="input-group-text bg-transparent border-start-0" role="button" id="togglePassword" aria-pressed="false" aria-label="Hiện mật khẩu" style="cursor:pointer;">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </span>
                    </div>

                    <span asp-validation-for="Password" class="invalid-feedback d-block"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>
                    <a asp-controller="Account" asp-action="ForgotPassword" class="small">Quên mật khẩu?</a>
                </div>

                <input asp-for="ReturnUrl" type="hidden" />

                <div class="d-grid mb-2">
                    <button type="submit" class="btn login-btn btn-lg">Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const toggle = document.getElementById('togglePassword');
            const pwd = document.getElementById('Password');

            if (!toggle || !pwd) return;

            toggle.addEventListener('click', function () {
                const isHidden = pwd.getAttribute('type') === 'password';
                pwd.setAttribute('type', isHidden ? 'text' : 'password');

                const icon = this.querySelector('i');
                if (icon) {
                    icon.classList.toggle('fa-eye', !isHidden);
                    icon.classList.toggle('fa-eye-slash', isHidden);
                }

                this.setAttribute('aria-pressed', String(isHidden));
                // keep focus on password input for better UX
                pwd.focus();
                if (isHidden) {
                    // move caret to the end
                    const len = pwd.value.length;
                    pwd.setSelectionRange(len, len);
                }
            });
        })();
    </script>
}